@model IEnumerable<NorthWestLabs.Models.ProtocolNotebook>
@{
    ViewBag.Title = "Catalog";
}


<section class="bg-light" id="portfolio">
    
    
        <div class="row" style="text-align:center">
            <div class="col-md-12">
                <h2 id="catalogTitle">Pharmacology Catalog</h2>
                <br />
                <br />
                <br />
            </div>
        </div>
    
    

    <div class="container">
        <div class="row">
            @{  int iCount = 1;
                int iCounter = 1;
                foreach (var item in Model)
                {
                    if (iCount % 3 == 0)
                    {
                        iCount++;
                        @: </div>
                    @:<div class='row'>
              }
                    <div class="col-md-4 col-sm-6 portfolio-item">
                        <a class="portfolio-link" data-toggle="modal" href="@Url.Content("#portfolioModal" + (iCounter++))">
                            <div class="portfolio-hover">
                                <div class="portfolio-hover-content">
                                    <i class="fa fa-plus fa-3x"></i>
                                </div>
                            </div>
                            <img class="img-fluid" src="@Url.Content(item.ImageLocation)" alt="">
                        </a>
                        <div class="portfolio-caption">
                            <h4>@item.AssayName</h4>
                            @*<p class="text-muted">Illustration</p>*@
                        </div>
                    </div>

                }
            }
        </div>
    </div>
</section>

@{  iCounter = 1;
    foreach (var item in Model)
    {
        <div class="portfolio-modal modal fade" id="@Url.Content("portfolioModal" + (iCounter++))" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="close-modal" data-dismiss="modal">
                        <div class="lr">
                            <div class="rl"></div>
                        </div>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 mx-auto">
                                <div class="modal-body">
                                    <!-- Project Details Go Here -->
                                    <h2>@item.AssayName</h2>
                                    <p class="item-intro text-muted"></p>
                                    <img class="img-fluid d-block mx-auto" src="img/portfolio/01-full.jpg" alt="">
                                    <p>@item.Description</p>
                                    <ul class="list-inline">
                                        <li>Estimated Testing Time: @item.EstDaysToComplete days</li>
                                       
                                    </ul>
                                    @*<button class="btn btn-primary" data-dismiss="modal" type="button">
                                            <i class="fa fa-times"></i>
                                            Close Project
                                        </button>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    }