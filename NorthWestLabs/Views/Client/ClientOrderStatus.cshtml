@model IEnumerable<NorthWestLabs.Models.AssayOrder>

@{
    ViewBag.Title = "ClientOrderStatus";
}

<h2>Order Number @ViewBag.ordernumber</h2>
@foreach (var assayorder in Model)
{
    <button class="accordion"><h3>Assay @assayorder.AssayID</h3><p>@assayorder.ProtocolNotebook.AssayName</p></button>
    <div class="panel">
       
        <strong>Assay Name</strong> @assayorder.ProtocolNotebook.AssayName<br />
        <strong>Assay Description</strong> @assayorder.ProtocolNotebook.Description<br />
        

        accordian stuff one.

        <br />
    </div>





}

<br /><br /><br /><br /><br /><br /><br />






<script>
    var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].onclick = function () {
            /* Toggle between adding and removing the "active" class,
            to highlight the button that controls the panel */
            this.classList.toggle("active");

            /* Toggle between hiding and showing the active panel */
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            } else {
                panel.style.display = "block";
            }
        }
    }
</script>