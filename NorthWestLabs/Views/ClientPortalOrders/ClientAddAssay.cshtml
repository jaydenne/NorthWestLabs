@model NorthWestLabs.Models.WorkOrderNumberAndLTNumber
@{
    ViewBag.Title = "ClientAddAssay";
}

@using (Html.BeginForm("ClientAddAssay", "ClientPortalOrders", new { workorderid = Model.WorkOrderNumber,LTNumber=Model.LTNumber }))
{
    @Html.AntiForgeryToken()
<h3>Enter Assay</h3>

<div class="form-group">
    @Html.LabelFor(model => model.template.assayOrder.AssayID, "Assay Name", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("AssayID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.template.assayOrder.AssayID, "", new { @class = "text-danger" })
    </div>
</div>


<div class="form-group">
    @Html.LabelFor(model => model.template.assayOrder.PriorityLevelID, "Work Days Processing", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("PriorityLevelID", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.template.assayOrder.PriorityLevelID, "", new { @class = "text-danger" })
    </div>
</div>


<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <input type="submit" value="Create New Order" class="btn btn-default" />
    </div>
</div>


}
