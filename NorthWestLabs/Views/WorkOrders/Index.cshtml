@model IEnumerable<NorthWestLabs.Models.WorkOrder>

@{
    ViewBag.Title = "Index";
}
<p>
    <div style="float:left">@Html.ActionLink("Return to Employee Portal", "SeattleIndex", "Seattle", null, new { @class = "btn btn-primary btn default" })</div>
    <div style="padding-bottom:10px; float:right">@Html.ActionLink("Create New Work Order", "Create", "WorkOrders", null, new { @class = "btn btn-primary btn default" })</div>
</p>
<br /><br />
<h2>Work Order Information</h2>


<table class="table">
    <tr>
        <th>
            Number
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.CompanyName)
        </th>
        <th>
            Contact Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuoteEstimate.QuoteID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DateTime)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WorkOrderID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.ContactFirstName) @Html.DisplayFor(modelItem => item.Client.ContactLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuoteEstimate.QuoteID)
            </td>
            <td>
                @item.DateTime.ToString("MM/dd/yy")
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.WorkOrderID }) |
                @Html.ActionLink("Details", "Details", new { id = item.WorkOrderID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.WorkOrderID })
            </td>
        </tr>
    }

</table>
